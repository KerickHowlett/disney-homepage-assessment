{
    "name": "disney-homepage-assessment",
    "version": "1.0.0",
    "private": true,
    "author": {
        "name": "Kerick Howlett",
        "url": "https://github.com/KerickHowlett"
    },
    "description": "A recreation of the Disney+ homepage written in pure TypeScript.",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/KerickHowlett/disney-homepage-assessment.git"
    },
    "bugs": {
        "url": "https://github.com/KerickHowlett/disney-homepage-assessment/issues"
    },
    "license": "UNLICENSED",
    "keywords": [
        "disney",
        "hiring assessment",
        "pnpm",
        "single-page application",
        "spa",
        "typescript",
        "web components",
        "vite"
    ],
    "engineStrict": true,
    "engines": {
        "node": ">=18.0.0"
    },
    "scripts": {
        "build": "run-s check:build:all build:no-type-check",
        "build:no-type-check": "vite build",
        "build:prod": "run-s check:build:all check:build:sw build:prod:no-type-check",
        "check:all": "run-p check:*",
        "check:build": "run-p check:build:app check:build:sw check:build:vite",
        "check:build:all": "run-p check:build:app check:build:sw check:build:vite",
        "check:build:app": "tsc -p tsconfig.json --noEmit",
        "check:build:sw": "tsc -p tsconfig.sw.json --noEmit",
        "check:build:vite": "tsc -p tsconfig.vite.json --noEmit",
        "check:format": "prettier --check 'src/**/*.{html,ts,js}'",
        "check:lint": "eslint --ext js,ts",
        "check:style": "stylelint **/*.css ./stylelintcache",
        "commit": "git-cz",
        "fix:all": "run-p fix:*",
        "fix:format": "prettier --write 'src/**/*.{html,ts,js}'",
        "fix:lint": "eslint --ext .js,.ts --fix",
        "fix:style": "stylelint **/*.css ./stylelintcache --fix",
        "pre-commit": "lint-staged",
        "prepare": "husky install",
        "preview:without-build": "vite preview",
        "preview": "run-s build preview:without-build",
        "serve": "vite dev",
        "start": "run-s check:build:all serve",
        "vite": "vite"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.1.2",
        "@commitlint/config-conventional": "^17.1.0",
        "@commitlint/cz-commitlint": "^17.1.2",
        "@types/node": "^18.7.14",
        "@typescript-eslint/eslint-plugin": "^5.36.1",
        "@typescript-eslint/parser": "^5.36.1",
        "commitizen": "^4.2.5",
        "eslint": "^8.23.0",
        "eslint-config-stylelint": "^15.1.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "eslint-plugin-sonarjs": "^0.15.0",
        "eslint-plugin-wc": "^1.3.2",
        "husky": "^8.0.1",
        "inquirer": "^8.0.0",
        "lint-staged": "^13.0.3",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.7.1",
        "stylelint": "^14.11.0",
        "stylelint-config-standard": "^28.0.0",
        "tslib": "^2.4.0",
        "typescript": "^4.8.2",
        "vite": "^3.0.9",
        "vite-plugin-pwa": "^0.12.4",
        "vite-tsconfig-paths": "^3.5.0"
    }
}
