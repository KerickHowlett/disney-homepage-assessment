root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[{*.md, README, TODO}]
max_line_length = 80
trim_trailing_whitespace = false

[*.{js,ts}]
quote_type = single

[*.y?aml]
indent_style = tab
indent_size = 2

[Makefile]
indent_size = 8
indent_style = tab
quote_type = unset
quote_type = double
